<div class="card text-center">
 <div class="card-header">
  <h2><%= @restaurant.name %></h2>
 </div>
 <div class="card-body">
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
  <button type="button" class="btn btn-outline-primary">
    <%= link_to "Edit", edit_restaurant_path(@restaurant)%>
  </button>
  <button type="button" class="btn btn-outline-primary">
   <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
  </button>
  <button type="button" class="btn btn-outline-primary">
    <%= link_to "Delete",
                restaurant_path(@restaurant),
                method: :delete,
                data: { confirm: "Are you sure?" }%>
  </button>
  <button type="button" class="btn btn-outline-primary">
    <%= link_to "Go back to the lists",
                restaurants_path,
                data: { confirm: "Are you sure you want to go back?" }%>
  </button>
 </div>
 <div class="card-footer text-muted">
  <h4><%= @restaurant.created_at %></h4>
 </div>
</div>
